<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewQuery"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:background="@drawable/back3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="?android:selectableItemBackground"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/userDetails"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--<de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/photo"
                android:src="@drawable/einstein"
                android:layout_width="150dp"
                android:layout_height="150dp" />-->

            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="24sp"
                    android:id="@+id/textStudentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Davlatbek" />

                <TextView
                    android:textSize="20sp"
                    android:id="@+id/textStudentSurname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textStudentName"
                    android:text="Isroilov" />

                <TextView
                    android:textSize="20sp"
                    android:id="@+id/textAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textStudentSurname"
                    android:text="23 years" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:paddingLeft="10dp"
            android:id="@+id/priorityBlock"
            android:layout_below="@+id/userDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iconPriority"
                android:src="@mipmap/ic_priority_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textPriority"
                android:paddingLeft="10dp"
                android:layout_centerInParent="true"
                android:textColor="#FFF"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iconPriority"
                android:layout_toRightOf="@+id/iconPriority"
                android:text="MEDIUM" />
        </RelativeLayout>

        <TextView
            android:background="#CC0000"
            android:textColor="#FFFFFF"
            android:id="@+id/textMessage"
            android:layout_below="@+id/priorityBlock"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Query Message very very very long sentence. Query Message very very very long sentence."  />

        <!--<View
            android:layout_width="fill_parent"
            android:layout_below="@id/textMessage"
            android:background="@android:color/white"
            android:layout_height="2dp"/>-->

    </RelativeLayout>
</android.support.v7.widget.CardView>