<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:background="?android:selectableItemBackground"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:id="@+id/cardType"
            android:padding="5dp"
            android:scrollHorizontally="true"
            android:text="Innopolis University"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/cardIconUniversity"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/innomini"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <ImageView
            android:id="@+id/chipIcon"
            android:padding="5dp"
            android:layout_below="@id/cardType"
            android:src="@drawable/air2"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/cardNumber"
            android:layout_below="@+id/chipIcon"
            android:textSize="26sp"
            android:text="0000 0000 0000 0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/cardValidity"
            android:text="Valid till 2017/05/12"
            android:layout_below="@+id/cardNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cardHolderName"
                android:text="Davlatbek"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/cardHolderSurname"
                android:paddingLeft="5dp"
                android:text="Isroilov"
                android:layout_toRightOf="@+id/cardHolderName"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/cardIcon"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/passportcard"
            android:layout_width="50dp"
            android:layout_height="50dp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>